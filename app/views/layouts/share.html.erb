<!-- app/views/layouts/share.html.erb -->
<!DOCTYPE html>
<html>
  <head>
    <title><%= @activity&.activity_name || @name || "Voxxy" %> | Voxxy</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="apple-mobile-web-app-capable" content="yes">

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="restaurant">
    <meta property="og:url" content="<%= request.original_url %>">
    <meta property="og:title" content="<%= @name || "Amazing Place on Voxxy" %>">
    <meta property="og:description" content="<%= @og_description || "Discover and share amazing places with friends on Voxxy" %>">
    <meta property="og:site_name" content="Voxxy">

    <% if @share_image.present? %>
      <%# Use actual place photo %>
      <meta property="og:image" content="<%= @share_image %>">
      <meta property="og:image:width" content="1200">
      <meta property="og:image:height" content="630">
      <meta property="og:image:alt" content="Photo of <%= @name %>">
    <% else %>
      <%# Fallback to Voxxy icon %>
      <meta property="og:image" content="<%= request.base_url %>/voxxy-share-default.png">
      <meta property="og:image:width" content="1200">
      <meta property="og:image:height" content="630">
    <% end %>

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:url" content="<%= request.original_url %>">
    <meta name="twitter:title" content="<%= @name || "Amazing Place on Voxxy" %>">
    <meta name="twitter:description" content="<%= @og_description || "Discover and share amazing places with friends on Voxxy" %>">
    <% if @share_image.present? %>
      <meta name="twitter:image" content="<%= @share_image %>">
      <meta name="twitter:image:alt" content="Photo of <%= @name %>">
    <% else %>
      <meta name="twitter:image" content="<%= request.base_url %>/voxxy-share-default.png">
    <% end %>

    <!-- iMessage / Apple -->
    <meta property="al:ios:url" content="voxxy://share/favorite/<%= @favorite_id %>">
    <meta property="al:ios:app_name" content="Voxxy">
    <%# Add your App Store ID when available %>
    <%# <meta property="al:ios:app_store_id" content="YOUR_APP_STORE_ID"> %>

    <!-- Additional metadata -->
    <% if @address.present? %>
      <meta property="og:locality" content="<%= @address.split(',').first %>">
    <% end %>
    <% if @price_range.present? %>
      <meta property="og:price:amount" content="<%= @price_range %>">
    <% end %>

    <%= stylesheet_link_tag 'share', media: 'all' %>
    <style>
      /* Navbar specific styles */
      .navbar {
        position: sticky;
        top: 0;
        z-index: 100;
        background: rgba(26, 22, 37, 0.95);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border-bottom: 1px solid rgba(147, 51, 234, 0.2);
      }
      .navbar-container {
        max-width: 420px;
        margin: 0 auto;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1rem;
      }
      .navbar-container .logo img {
        height: 40px;
        filter: brightness(1.1);
      }
      .nav-links {
        display: flex;
        gap: 0.5rem;
      }
      .nav-link {
        font-weight: 600;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        background: rgba(147, 51, 234, 0.1);
        border: 1px solid rgba(147, 51, 234, 0.2);
        color: rgba(255, 255, 255, 0.9);
        text-decoration: none;
        transition: all 0.3s ease;
        font-size: 14px;
      }
      .nav-link:hover {
        background: rgba(147, 51, 234, 0.2);
        border-color: rgba(147, 51, 234, 0.4);
        transform: translateY(-1px);
      }
    </style>
  </head>
  <body>
    <nav class="navbar">
      <div class="navbar-container">
        <a href="<%= app_base_url %>/" class="logo">
          <img src="/HEADER.svg" alt="Voxxy logo">
        </a>
        <div class="nav-links">
          <a href="<%= app_base_url %>/#/login" class="nav-link">Login</a>
        </div>
        <div class="nav-links">
          <a href="<%= app_base_url %>/#/signup" class="nav-link">Signup</a>
        </div>
      </div>
    </nav>

    <%= yield %>
  </body>
</html>